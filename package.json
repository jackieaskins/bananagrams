  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc --project server/tsconfig.json && NODE_ENV=production webpack",
    "check-types:server": "tsc --noEmit --project server/tsconfig.json",
    "check-types:client": "tsc --noEmit --project client/tsconfig-no-tests.json",
    "check-types": "npm run check-types:server && npm run check-types:client",
    "dev": "nodemon",
    "format": "prettier --write .",
    "lint": "eslint --ext .js,.ts,.tsx server/src client/src",
    "pre-commit": "npm run check-types && lint-staged && npm run lint && npm test",
    "prepare": "husky install",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "jest --silent",
    "test:client": "jest --projects client",
    "test:client:watch": "jest --projects client --watch",
    "test:server": "jest --projects server",
    "test:server:watch": "jest --projects server --watch",
    "test:watch": "jest --watch"
