{
  "name": "bananagrams",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc --project server/tsconfig.json && webpack --mode production",
    "check-outdated": "check-outdated --ignore-pre-releases",
    "check-types": "tsc --noEmit --project server/tsconfig.json && tsc --noEmit --project client/tsconfig.json",
    "check-types:server": "tsc --noEmit --project server/tsconfig.json",
    "check-types:client": "tsc --noEmit --project client/tsconfig.json",
    "dev": "nodemon",
    "lint": "eslint --ext .js,.ts,.tsx server/src client/src",
    "pre-commit": "npm run check-types && lint-staged && npm run lint && npm test && npm outdated",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "jest --silent",
    "test:watch": "jest --watch",
    "test:server": "jest --projects server",
    "test:server:watch": "jest --projects server --watch",
    "test:client": "jest --projects client",
    "test:client:watch": "jest --projects client --watch",
    "storybook": "start-storybook -p 6006 -c client/.storybook",
    "build-storybook": "build-storybook"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
